{% extends 'front/base.html.twig' %}

{% block front_title %}Awesome Symfony Blog{% endblock %}

{% block front_content %}
    <div class="col-md-8">

        <h1 class="my-4">Awesome Symfony Blog
{#            <small>Secondary Text</small>#}
        </h1>

        <!-- Blog Posts -->
        {% for article in articles|sort((a,b) => b.createdAt <=> a.createdAt) %}
            <div class="card mb-4">
                <img class="card-img-top" src="http://placehold.it/750x300" alt="Card image cap">
                <div class="card-body">
                    <h2 class="card-title">{{ article.title }}</h2>
                    <p class="card-text">{{ article.excerpt }}</p>
                    <a href="{{ path('front_article_show', {'slug': article.slug}) }}" class="btn btn-primary">Read More &rarr;</a>
                </div>
                <div class="card-footer text-muted">
                    Posted on {{ article.createdAt|date('F j, Y H:m A') }} by
                    <a href="#">{{ article.author.username }}</a>
                </div>
            </div>
        {% endfor %}

        <!-- Pagination -->
