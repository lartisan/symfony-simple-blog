<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">

        <title>{% block front_title %}{% endblock %}</title>

        <!-- Custom styles for this template -->
        {% block front_stylesheets %}
            {{ encore_entry_link_tags('front') }}
        {% endblock %}
    </head>

    <body>

    <!-- Navigation -->
    {% include 'front/inc/navigation.html.twig' %}

    <!-- Page Content -->
    <div class="container">

        <div class="row">

            <!-- Blog Entries Column -->
            {% block front_content %}{% endblock %}

            <!-- Sidebar Widgets Column -->
            {% include 'front/inc/sidebar.html.twig' %}

        </div>
        <!-- /.row -->

    </div>
    <!-- /.container -->

    <!-- Footer -->
    {% include 'front/inc/footer.html.twig' %}

    <!-- Bootstrap core JavaScript -->
    {% block front_javascripts %}
        {{ encore_entry_script_tags('front') }}
    {% endblock %}

    </body>

</html>
